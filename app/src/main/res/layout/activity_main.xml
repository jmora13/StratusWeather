<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_view1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/blue_background"
    android:fitsSystemWindows="true"
    tools:context="com.strat.jose.stratusweather.MainActivity2">



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ScrollView>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.jose.stratusweather.com.strat.jose.stratusweather.MainActivity2">

        <TextView
            android:id="@+id/cityNameTextView"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/weatherIcon"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_below="@+id/cityNameTextView"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/sendButton"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="158dp"
            android:layout_marginVertical="135sp"
            android:scaleType="fitCenter"
            android:text="Search Location" />
        <TextView
            android:id="@+id/tempTextView"
            android:textStyle="normal"
            android:textColor="#fff"
            android:textSize="90sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/weatherIcon"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/windSpeedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/weatherIcon"
            android:layout_marginTop="203dp"
            android:textColor="#fff"
            android:textSize="45sp" />
        <TextView
            android:id="@+id/humidityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="45sp"
            android:layout_below="@+id/windSpeedTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp" />
        <TextView
            android:id="@+id/descriptionTextView"
            android:textSize="45sp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/humidityTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="17dp" />
        <TextView
            android:id="@+id/pressureTextView"
            android:textSize="45sp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descriptionTextView"
            android:layout_marginTop="21dp" />

        <TextView
            android:id="@+id/humidText"
            android:textSize="45sp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pressureTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="22dp" />




    </RelativeLayout>

</LinearLayout>